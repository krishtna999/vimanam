<h3>{{viewTitle}}</h3>

<form action="/coupon/add" method="POST" autocomplete="on">
    <div class="form-group">
        <label for="fullName">Coupon code</label>
        <input type="text" name="code" id="code" class="form-control">
    </div>
    
    <div class="form-group">
        <label for="validFromDate">Valid From</label>
        <input type="date" name="validFrom" id="validFrom" class="form-control">
    </div><div class="form-group">
        <label for="validTillDate">Valid Till</label>
        <input type="date" name="validTill" id="validTill" class="form-control">
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="available">Number of available coupons</label>
            <input type="number" name="available" id="availability" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="discount">Discount %</label>
            <input type="number" name="discount" id="discount" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="minAmount">Minimum Amount to claim Coupon</label>
            <input type="number" name="minAmount" id="minAmount" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="maxCashback">Maximum Cashback</label>
            <input type="number" name="maxCashback" id="maxCashback" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-info" type="submit" style="margin-left : 300px;"><i class="fa fa-database"></i>Submit</button>
    </div>
</form>