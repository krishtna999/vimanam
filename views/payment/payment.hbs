<h3>{{viewTitle}}</h3>
  <script src="https://js.stripe.com/v3/"></script>
 <link rel="stylesheet" type="text/css" href="/payment.css">
<form action="/charge" method="POST">
    <div class="group">
      <label>
        <span>Name</span>
        <input name="cardholder-name" class="field" placeholder="Jane Doe" />
      </label>
      <label>
        <span>Phone</span>
        <input name="phone" class="field" placeholder="(123) 456-7890" type="tel" />
      </label>
    </div>
    <div class="group">
      <label>
        <span>Card</span>
        <div name="cash" value={{toPay}} id="card-element" class="field"></div>
      </label>
    </div>
    <button type="submit">Pay {{toPay}}$</button>
    <div class="outcome">
      <div class="error"></div>
      <div class="success">
        Success! Your Stripe token is <span class="token"></span>
      </div>
    </div>

<script src="/paymentScript.js"></script>
</form>